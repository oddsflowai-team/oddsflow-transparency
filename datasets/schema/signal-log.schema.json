{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "OddsFlow Signal Log",
  "type": "object",
  "required": ["match_id", "timestamp", "market", "selection", "odds", "model_version", "schema_version"],
  "properties": {
    "match_id": { "type": "string" },
    "timestamp": { "type": "string", "description": "ISO 8601 with timezone" },
    "league": { "type": "string" },
    "home_team": { "type": "string" },
    "away_team": { "type": "string" },
    "market": { "type": "string", "enum": ["1X2", "AH", "OU"] },
    "selection": { "type": "string" },
    "line": { "type": ["number", "null"] },
    "odds": { "type": "number" },
    "odds_source": { "type": ["string", "null"] },
    "model_version": { "type": "string" },
    "schema_version": { "type": "string" },
    "status": { "type": "string", "enum": ["open", "settled", "void"], "default": "open" },
    "result": { "type": ["string", "null"] },
    "notes": { "type": ["string", "null"] }
  }
}
